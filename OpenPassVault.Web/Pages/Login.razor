@page "/login"
@using OpenPassVault.Shared.DTO
@inject NavigationManager NavigationManager
@inject OpenPassVault.Web.Services.Interfaces.IBrowserStorageService BrowserStorageService

<PageTitle>Log ind</PageTitle>

<div class="card">
    <h4 class="card-header">Log ind</h4>
    <div class="card-body">
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="model.Email" class="form-control" />
                <ValidationMessage For="@(() => model.Email)" />
            </div>
            <div class="form-group mt-2">
                <label>Password</label>
                <InputText @bind-Value="model.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => model.Password)" />
            </div>
            <div class="mt-4">
                <button disabled="@loading" class="btn btn-primary">
                    @if (loading) 
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Log ind
                </button>
                <NavLink href="/register" class="btn btn-link">Mangler du en konto? Opret dig!</NavLink>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequest model = new();
    private bool loading;

    private async void OnValidSubmit()
    {
        loading = true;
        
    }

    protected override void OnInitialized()
    {
        BrowserStorageService.SetItem<string>("test", "test");
        base.OnInitialized();
        
    }

}


