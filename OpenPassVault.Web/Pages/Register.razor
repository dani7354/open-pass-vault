@page "/register"

@inject NavigationManager NavigationManager

<PageTitle>Register</PageTitle>

<div class="card">
    <h4 class="card-header">Opret</h4>
    <div class="card-body">
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="model.Email" class="form-control" />
                <ValidationMessage For="@(() => model.Email)" />
            </div>
            <div class="form-group mt-2">
                <label>Password</label>
                <InputText @bind-Value="model.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => model.Password)" />
            </div>
            <div class="form-group mt-2">
                <label>Bekr√¶ft password</label>
                <InputText @bind-Value="model.ConfirmPassword" type="password" class="form-control" />
                <ValidationMessage For="@(() => model.ConfirmPassword)" />
            </div>
            <div class="mt-4">
                <button disabled="@loading" class="btn btn-primary">
                    @if (loading) 
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Opret
                </button>
                <NavLink href="/login" class="btn btn-link">Har du allerede en konto? Log ind</NavLink>
            </div>
            
        </EditForm>
    </div>
</div>

@code {
    private RegisterRequest model = new();
    private bool loading;

    private async void OnValidSubmit()
    {
        loading = true;



    }

}